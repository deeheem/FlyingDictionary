<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivSpeakerSearch"
        android:layout_height="50dp"
        android:layout_width="70sp"
        android:paddingTop="15dp"
        android:padding="18dp"
        android:src="@drawable/speaker_gray"/>

    <TextView
        android:text="word"
        android:textColor="#000000"
        android:fontFamily="sans-serif-thin"
        android:textSize="18sp"
        android:id="@+id/tvSearchedWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivSpeakerSearch"
        android:layout_toEndOf="@+id/ivSpeakerSearch" />

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50sp"
        android:padding="18dp"
        android:src="@drawable/arrow_left_up"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ivArrow" />


</RelativeLayout>